<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/_16sdp">

    <ImageView
        android:id="@+id/CA_vecicle_information_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_CA_vehicle_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create account"
        android:textColor="@color/title"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_step4_vecicle_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Step 4: Vehicle information"
        android:textColor="@color/title"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_CA_vehicle_information" />

    <ProgressBar
        android:id="@+id/progressBar_vecicle_information"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:progress="80"
        android:progressDrawable="@drawable/progress_bar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_step4_vecicle_information" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Car images (6 sides)"
        android:textColor="@color/title"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@+id/img_car_images"
        app:layout_constraintEnd_toEndOf="@+id/img_car_images"
        app:layout_constraintStart_toStartOf="@+id/img_car_images"
        app:layout_constraintTop_toTopOf="@+id/img_car_images"
        app:layout_constraintVertical_bias="0.77" />

    <ImageView
        android:id="@+id/img_car_images"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/photo_background"
        android:scaleType="center"
        android:src="@drawable/add_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_vecicle_information" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Car license (Front)"
        android:textColor="@color/title"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@+id/img_car_license_front"
        app:layout_constraintEnd_toEndOf="@+id/img_car_license_front"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_car_license_front"
        app:layout_constraintVertical_bias="0.77" />

    <ImageView
        android:id="@+id/img_car_license_front"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/photo_background"
        android:scaleType="center"
        android:src="@drawable/add_image"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_car_images"
        app:layout_constraintWidth_percent="0.48" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Car license (Back)"
        android:textColor="@color/title"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@+id/img_car_license_back"
        app:layout_constraintEnd_toEndOf="@+id/img_car_license_back"
        app:layout_constraintStart_toStartOf="@+id/img_car_license_back"
        app:layout_constraintTop_toTopOf="@+id/img_car_license_back"
        app:layout_constraintVertical_bias="0.77"/>

    <ImageView
        android:id="@+id/img_car_license_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/photo_background"
        android:scaleType="center"
        android:src="@drawable/add_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintTop_toBottomOf="@+id/img_car_images"
        app:layout_constraintWidth_percent="0.48" />

    <EditText
        android:id="@+id/et_car_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:backgroundTint="@color/hint"
        android:hint="Car number"
        android:textColor="@color/title"
        android:textColorHint="@color/hint"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_car_license_front" />

    <Spinner
        android:id="@+id/car_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:backgroundTint="@color/hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_car_number" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/hint"
        app:layout_constraintEnd_toEndOf="@+id/car_color"
        app:layout_constraintStart_toStartOf="@+id/car_color"
        app:layout_constraintTop_toBottomOf="@+id/car_color" />

    <Spinner
        android:id="@+id/car_model"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:backgroundTint="@color/hint"
        android:entries="@array/car_model"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/hint"
        app:layout_constraintEnd_toEndOf="@+id/car_model"
        app:layout_constraintStart_toStartOf="@+id/car_model"
        app:layout_constraintTop_toBottomOf="@+id/car_model" />

    <Button
        android:id="@+id/btn_CA_vehicle_information_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/primary"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

</androidx.constraintlayout.widget.ConstraintLayout>